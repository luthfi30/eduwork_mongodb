<%- include('layout/header.ejs') %>

<div class="container">
  <div class="row my-4">
    <div class="col-lg-12">
      <% if(message) { %>
      <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
        <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close"></button>
        <strong><%= message.message %></strong>
      </div>
      <% } %>

      <div class="table-responsive">
        <% if(products.length > 0) { %>
        <table class="table table-striped text-center">
          <thead>
            <tr class="table-dark">
              <th>ID</th>
              <th>Image</th>
              <th>Name</th>
              <th>Price</th>
              <th>Stock</th>
              <th>Status</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% products.forEach((row, index) => { %>
            <tr class="align-middle">
              <td><%= index %></td>
              <td><img src="<%= row.image %>" width="100" class="img-thumbnail" /></td>
              <td><%= row.name %></td>
              <td><%= row.price %></td>
              <td><%= row.stock %></td>
              <td><%= row.status %></td>
              <td>
                <a href="/edit/<%= row._id %>" class="btn btn-primary">Edit</a>

                <a href="/delete/<%= row._id %>" class="btn btn-danger">Delete</a>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
        <% } else { %>
        <h3 class="text-center mt-5">No Products Found ind the Database</h3>
        <% } %>
      </div>
    </div>
  </div>
</div>

<%- include('layout/footer.ejs') %>
